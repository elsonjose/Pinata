<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/main_root">

    <CalendarView
        android:id="@+id/main_calenderview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:theme="@style/CalenderTheme" />


    <LinearLayout
        android:id="@+id/main_linearlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_calenderview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_add_bday_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_gradient"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Add birthday"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/main_view_bday_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@drawable/curved_gradient"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="View birthday"
            android:textColor="@color/colorAccent" />

    </LinearLayout>


    <TextView
        android:id="@+id/main_info_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Export whatsapp chat without media into PiÃ±ata to get started."
        android:textColor="@color/colorBlack"
        android:textSize="15sp" />

</RelativeLayout>